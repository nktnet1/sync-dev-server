{
  "name": "sync-dev-server",
  "author": "Khiet Tam Nguyen",
  "license": "MIT",
  "description": "Starts a server before your tests and stops on completion. Inspired by jest-puppeteer's subpackage jest-dev-server. Setup and teardown operations are fully synchronous.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nktnet1/sync-dev-server"
  },
  "version": "1.0.3",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "start": "ts-node tests/app/server1",
    "start2": "ts-node tests/app/server2",
    "test": "jest",
    "tc": "jest --coverage",
    "lint": "eslint './**/*.ts'",
    "lf": "eslint --fix './**/*.ts'",
    "tsc": "tsc --noEmit",
    "build": "rm -rf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nodejs",
    "sync",
    "synchronous",
    "jest",
    "server",
    "development",
    "jest-dev-server",
    "automatic",
    "start",
    "stop",
    "kill",
    "kill-sync",
    "testing",
    "http",
    "localhost",
    "comp1531"
  ],
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.19",
    "@types/node-netstat": "^1.8.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.9.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "sync-request-curl": "^2.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dns-lookup-sync": "^1.0.0",
    "kill-sync": "^1.0.3",
    "node-netstat": "^1.9.0",
    "slync": "^1.0.2"
  }
}
