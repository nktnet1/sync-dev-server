{
  "name": "sync-dev-server",
  "author": "Khiet Tam Nguyen",
  "license": "MIT",
  "description": "Starts a server before your tests and stops on completion. Inspired by jest-puppeteer's subpackage jest-dev-server. Setup and teardown operations are fully synchronous.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nktnet1/sync-dev-server"
  },
  "version": "1.1.2",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "scripts": {
    "start": "tsx tests/app/server1",
    "start2": "tsx tests/app/server2",
    "test": "vitest run",
    "tc": "vitest run --coverage",
    "lint": "eslint './**/*.ts'",
    "lf": "eslint --fix './**/*.ts'",
    "tsc": "tsc --noEmit",
    "build": "tsdown",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "nodejs",
    "sync",
    "synchronous",
    "jest",
    "server",
    "development",
    "jest-dev-server",
    "automatic",
    "start",
    "stop",
    "kill",
    "kill-sync",
    "testing",
    "http",
    "localhost",
    "comp1531"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/command-exists": "^1.2.3",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/node-netstat": "^1.8.4",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "express": "^5.2.1",
    "globals": "^17.0.0",
    "morgan": "^1.10.1",
    "sync-request-curl": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsdown": "^0.18.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "dns-lookup-sync": "^1.0.0",
    "kill-sync": "^1.0.3",
    "node-netstat": "^1.9.0",
    "slync": "^1.0.2"
  },
  "packageManager": "pnpm@10.27.0",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  }
}
